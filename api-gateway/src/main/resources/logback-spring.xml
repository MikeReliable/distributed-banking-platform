<configuration>

    <property name="SERVICE" value="api-gateway"/>

    <property name="PATTERN"
              value="ts=%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} level=%-5level service=${SERVICE} logger=%logger{36} msg=%msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
